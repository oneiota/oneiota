/Load in content for the first two projects
- content_for(:title, data.projects[0].project)
- content_for(:foreground, data.projects[0].colors.foreground)
- content_for(:background, data.projects[0].colors.background)

- data.projects.each do |project|
  %article{:id => project.slug,:style => "color:#{project.colors.foreground}; background:#{project.colors.background};", :data => {:title => project.project, :foreground => project.colors.foreground, :background => project.colors.background, :digital => project.digital, :branding => project.branding}}
    %div.project
      - project.images.each_with_index do |img, index|
        - if index == 1
          .project-details
            %h2= project.project
            %ul
              - project.tags.each do |tag|
                %li.tag= tag
            %p= project.description
            - if project.link
              %a{:href => "http://#{project.link}",:title => "#{project.project}",:target => "_blank",:class => "webLink"}= project.link
            %ul.social-links
              %li
                %a.icon-twitter.icon{:href=>'twitter.com/ONEIOTA_', :title => '@oneiota_'}
              %li
                %a.icon-facebook.icon{:href=>'facebook.com/pages/ONE-IOTA-STUDIO/103749066322532', :title => '@oneiotastudio'}
              %li
                %a.icon-pintrest.icon{:href=>'pinterest.com/oneiota/', :title => '@oneiota'}
        - sizeArr = FastImage.size("http://localhost:4567/images/#{project.slug}/#{img.mobile}")
        - spanRatio = (sizeArr[1].to_f/sizeArr[0].to_f)*100
        %div{:class => "placeholder #{img.grid}"}
          %span.placeholder-bg{:src => "images/#{project.slug}/#{img.placeholder}",:alt => "#{img.alt}",:style => "padding-bottom:#{spanRatio}%;background:#{project.colors.foreground}",:data => {:mobile => "images/#{project.slug}/#{img.mobile}", :desktop => "images/#{project.slug}/#{img.desktop}"}}
          %span.placeholder-alt= img.alt

.device