.hud.top-hud.info-hud
  %ul.filterMenu
    %li.eyeButton
      %a{:href => '#', :title => 'Get Picky'}
        %i.icon.eye3.scaleOutSevenFive
        %i.icon.eye3.scaleInSevenFive
    %li.active.scaleInMenu
      %a{:href => '#',:data => {:filter => 'all'}}
        %span.scaleOutSevenFive All
        %span.scaleInSevenFive All
    %li.scaleInMenu.delay-one
      %a{:href => '#',:data => {:filter => 'branding'}}
        %span.scaleOutSevenFive Branding &amp; Design
        %span.scaleInSevenFive Branding &amp; Design
    %li.scaleInMenu.delay-two
      %a{:href => '#',:data => {:filter => 'digital'}}
        %span.scaleOutSevenFive Websites &amp; Apps
        %span.scaleInSevenFive Websites &amp; Apps

  .navCounters
    .navPanel
    %ul
      - textColor = data.projects[0].colors.background
      - data.projects.each_with_index do |project, index|
        -if index == 0
          %li.active
            %a.nav-item{:href => '/'+project.slug}
              %i.icon-circle.scaleOutSevenFive.icon
              %i.icon-circle.scaleInSevenFive.icon
            %span.arrow-tab.hideArrow.scaleIn{:style => "color:#{textColor};"}
              %span.arrow-title
                =project.project
        -elsif index == 7
          %li
            %a.nav-item{:href => '/'+project.slug}
              %i.icon-circle.scaleOutSevenFive.icon
              %i.icon-circle.scaleInSevenFive.icon
              %a{:href => '#', :title => 'More Projects'}
                %i.icon-down-arrow-bare.icon
              %span.arrow-tab.hideArrow.scaleIn{:style => "color:#{textColor};"}
                %span.arrow-title
                  =project.project
        -elsif index == 8
          %li.mobile-hide
            %a{:href => '#', :title => 'Back'}
              %i.icon-up-arrow-bare.icon
              %a.nav-item{:href => '/'+project.slug}
                %i.icon-circle.scaleOutSevenFive.icon
                %i.icon-circle.scaleInSevenFive.icon
              %span.arrow-tab.hideArrow.scaleIn{:style => "color:#{textColor};"}
                %span.arrow-title
                  =project.project
        -elsif index > 8 
          %li.mobile-hide
            %a.nav-item{:href => '/'+project.slug}
              %i.icon-circle.scaleOutSevenFive.icon
              %i.icon-circle.scaleInSevenFive.icon
            %span.arrow-tab.hideArrow.scaleIn{:style => "color:#{textColor};"}
              %span.arrow-title
                =project.project
        -else
          %li
            %a.nav-item{:href => '/'+project.slug}
              %i.icon-circle.scaleOutSevenFive.icon
              %i.icon-circle.scaleInSevenFive.icon
            %span.arrow-tab.hideArrow.scaleIn{:style => "color:#{textColor};"}
              %span.arrow-title
                =project.project

.hud.bottom-hud 
  %ul.indexNav
    %li
      %a.icon-info.icon{:href=>'#', :title => 'Information'}
  %ul.menuNav
    %li
      %a.icon-close.icon{:href=>'#', :title => 'Close this'}
    / %li
    /   %a.icon-contact.icon{:href=>'#', :title => 'Get in touch'}
  %ul.infoNav
    %li
      %a.icon-left-arrow.icon{:href=>'#', :title => 'Back'}